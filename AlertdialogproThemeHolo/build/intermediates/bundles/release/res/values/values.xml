<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr format="reference" name="adpButtonBarDividerHorizontal"/>
    <attr format="reference" name="adpButtonBarDividerVertical"/>
    <attr format="reference|color" name="adpTitleDividerBackground"/>
    <attr format="dimension" name="adpTitleDividerHeight"/>
    <color name="adp_background_holo_dark">#ff000000</color>
    <color name="adp_background_holo_light">#fff3f3f3</color>
    <color name="adp_bright_foreground_disabled_holo_dark">#ff4c4c4c</color>
    <color name="adp_bright_foreground_disabled_holo_light">#ffb2b2b2</color>
    <color name="adp_bright_foreground_holo_dark">@color/adp_background_holo_light</color>
    <color name="adp_bright_foreground_holo_light">@color/adp_background_holo_dark</color>
    <color name="adp_holo_blue_light">#ff33b5e5</color>
    <dimen name="adp_holo_title_divider_height">2dp</dimen>
    <dimen name="adp_holo_title_height">64dip</dimen>
    <style name="AlertDialogPro.Holo">
        <item name="adpLayout">@layout/adp_alert_dialog_holo</item>
        <item name="adpProgressLayout">@layout/adp_progress_dialog_holo</item>
        <item name="adpHorizontalProgressLayout">@layout/adp_progress_dialog_horizontal_holo</item>
        <item name="adpListLayout">@layout/adp_select_dialog_holo</item>
        <item name="adpListItemLayout">@layout/adp_select_dialog_item_holo</item>
        <item name="adpMultiChoiceItemLayout">@layout/adp_select_dialog_multichoice_holo</item>
        <item name="adpSingleChoiceItemLayout">@layout/adp_select_dialog_singlechoice_holo</item>
    </style>
    <style name="AlertDialogPro.Holo.Light"/>
    <style name="Animation.AlertDialogPro.Holo"/>
    <style name="Animation.AlertDialogPro.Holo.Dialog" parent="android:Animation.Dialog"/>
    <style name="DialogWindowTitle.AlertDialogPro.Holo">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">
            @style/TextAppearance.AlertDialogPro.Holo.DialogWindowTitle
        </item>
    </style>
    <style name="DialogWindowTitle.AlertDialogPro.Holo.Light">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">
            @style/TextAppearance.AlertDialogPro.Holo.DialogWindowTitle
        </item>
    </style>
    <style name="TextAppearance.AlertDialogPro.Holo"/>
    <style name="TextAppearance.AlertDialogPro.Holo.DialogWindowTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/adp_holo_blue_light</item>
    </style>
    <style name="Theme.AlertDialogPro.Holo" parent="Theme.AlertDialogPro">
        <item name="android:textColorPrimary">@color/adp_primary_text_holo_dark</item>
        <!-- Animation -->
        <item name="android:windowAnimationStyle">@style/Animation.AlertDialogPro.Holo.Dialog</item>
        <!-- Background -->
        <item name="android:windowBackground">@drawable/adp_dialog_full_holo_dark</item>
        <!-- Title -->
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.AlertDialogPro.Holo</item>
        <item name="adpTitleDividerBackground">@color/adp_holo_blue_light</item>
        <item name="adpTitleDividerHeight">@dimen/adp_holo_title_divider_height</item>
        <item name="adpTitleMinHeight">@dimen/adp_holo_title_height</item>
        <!-- Message -->
        <item name="adpMessageTextAppearance">?android:attr/textAppearanceMedium</item>
        <!-- ListView -->
        <item name="adpListItemMinHeight">48dip</item>
        <item name="adpListItemTextColor">@color/adp_primary_text_holo_dark</item>
        <item name="adpListItemTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="adpListSingleChoiceTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="adpListMultiChoiceTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="adpListItemBackground">@drawable/adp_item_background_holo_dark</item>
        <item name="adpListDivider">@drawable/adp_list_divider_holo_dark</item>
        <item name="android:listViewStyle">@style/Widget.AlertDialogPro.Holo.ListView</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/adp_btn_radio_holo_dark</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/adp_btn_check_holo_dark</item>
        <!-- ButtonBar-->
        <item name="adpButtonBarStyle">@style/Widget.AlertDialogPro.Holo.ButtonBar</item>
        <item name="adpButtonBarDividerHorizontal">@drawable/adp_list_divider_holo_dark</item>
        <item name="adpButtonBarDividerVertical">@drawable/adp_list_divider_holo_dark</item>
        <item name="adpButtonBarButtonStyle">@style/Widget.AlertDialogPro.Holo.Button</item>
        <item name="alertDialogProStyle">@style/AlertDialogPro.Holo</item>
    </style>
    <style name="Theme.AlertDialogPro.Holo.Light" parent="Theme.AlertDialogPro.Light">
        <item name="android:textColorPrimary">@color/adp_primary_text_holo_light</item>
        <!-- Animation -->
        <item name="android:windowAnimationStyle">@style/Animation.AlertDialogPro.Holo.Dialog</item>
        <!-- Background -->
        <item name="android:windowBackground">@drawable/adp_dialog_full_holo_light</item>
        <!-- Title -->
        <item name="android:windowTitleStyle">@style/DialogWindowTitle.AlertDialogPro.Holo.Light</item>
        <item name="adpTitleDividerBackground">@color/adp_holo_blue_light</item>
        <item name="adpTitleDividerHeight">@dimen/adp_holo_title_divider_height</item>
        <item name="adpTitleMinHeight">@dimen/adp_holo_title_height</item>
        <!-- Message -->
        <item name="adpMessageTextAppearance">?android:attr/textAppearanceMedium</item>
        <!-- ListView -->
        <item name="adpListItemMinHeight">48dip</item>
        <item name="adpListItemTextColor">@color/adp_primary_text_holo_light</item>
        <item name="adpListItemTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="adpListSingleChoiceTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="adpListMultiChoiceTextAppearance">?android:attr/textAppearanceMedium</item>
        <item name="adpListItemBackground">@drawable/adp_item_background_holo_light</item>
        <item name="adpListDivider">@drawable/adp_list_divider_holo_light</item>
        <item name="android:listViewStyle">@style/Widget.AlertDialogPro.Holo.ListView</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/adp_btn_radio_holo_light</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/adp_btn_check_holo_light</item>
        <!-- ButtonBar-->
        <item name="adpButtonBarStyle">@style/Widget.AlertDialogPro.Holo.ButtonBar</item>
        <item name="adpButtonBarDividerHorizontal">@drawable/adp_list_divider_holo_light</item>
        <item name="adpButtonBarDividerVertical">@drawable/adp_list_divider_holo_light</item>
        <item name="adpButtonBarButtonStyle">@style/Widget.AlertDialogPro.Holo.Light.Button</item>
        <item name="alertDialogProStyle">@style/AlertDialogPro.Holo.Light</item>
    </style>
    <style name="Widget.AlertDialogPro.Holo"/>
    <style name="Widget.AlertDialogPro.Holo.Button">
        <item name="android:background">@drawable/adp_item_background_holo_dark</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
    </style>
    <style name="Widget.AlertDialogPro.Holo.ButtonBar">
        <!-- Use own attrs -->
        <item name="divider">?attr/adpButtonBarDividerVertical</item>
        <item name="showDividers">middle</item>
        <item name="dividerPadding">0dip</item>
        <item name="android:background">@null</item>
    </style>
    <style name="Widget.AlertDialogPro.Holo.Light"/>
    <style name="Widget.AlertDialogPro.Holo.Light.Button">
        <item name="android:background">@drawable/adp_item_background_holo_light</item>
        <item name="android:paddingLeft">4dip</item>
        <item name="android:paddingRight">4dip</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
    </style>
    <style name="Widget.AlertDialogPro.Holo.Light.ListView" parent="android:Widget.ListView">
        <item name="android:listSelector">?attr/adpListItemBackground</item>
    </style>
    <style name="Widget.AlertDialogPro.Holo.ListView" parent="android:Widget.ListView">
        <item name="android:listSelector">?attr/adpListItemBackground</item>
    </style>
</resources>