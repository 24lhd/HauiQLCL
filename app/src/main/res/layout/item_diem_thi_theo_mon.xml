<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_item"
    android:layout_marginBottom="@dimen/margin_item">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/selecter"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/id_item_diem_thi_lop_stt"
                android:gravity="center"
                android:minWidth="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/md_black_1000"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/ic_exam"
                android:layout_marginTop="@dimen/margin_view_inner"
                android:layout_marginRight="@dimen/margin_view_inner"
                android:layout_marginBottom="@dimen/margin_view_inner"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_height="30dp" />
            <View
                android:layout_width="1dp"
                android:background="@color/md_blue_grey_100"
                android:layout_margin="@dimen/margin_view_inner"
                android:layout_height="match_parent"></View>
            <TextView
                android:layout_width="wrap_content"
                android:text="Tên Lớp"
                android:layout_gravity="left|center"
                android:layout_weight="1"
                android:textColor="@color/md_black_1000"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textStyle="bold"
                android:id="@+id/id_item_diem_thi_lop_tenlop"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_view_inner"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="ghichu:"
                    android:layout_gravity="center"
                    style="@style/TextAppearance.AppCompat.Caption"
                    android:singleLine="true"
                    android:maxWidth="100dp"
                    android:textColor="@color/md_black_1000"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_item_diem_thi_lop_gc" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="D"
                    android:layout_gravity="center"
                    android:id="@+id/id_item_diem_thi_lop_dc"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_margin="@dimen/margin_view_inner"
                    android:textColor="@color/md_red_500"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="L1"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/fm_l1"
                        android:layout_gravity="center"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/id_item_diem_thi_lop_l1"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:singleLine="true"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="L2"
                        android:layout_weight="1"
                        android:id="@+id/fm_l2"
                        android:layout_gravity="center"
                        android:gravity="center"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/id_item_diem_thi_lop_l2"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/colorAccent"
                        android:singleLine="true"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="TK1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/fm_l3"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:id="@+id/id_item_diem_thi_lop_tk1"
                        android:gravity="center"
                        android:singleLine="true"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/fm_l4"
                        android:layout_gravity="center"
                        android:text="TK2"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:id="@+id/id_item_diem_thi_lop_tk2"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Ngày 1"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:id="@+id/id_item_diem_thi_lop_n1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:singleLine="true"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Ngày 2"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:id="@+id/id_item_diem_thi_lop_n2"
                        android:gravity="center"
                        style="@style/TextAppearance.AppCompat.Caption"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
    </LinearLayout>
   


</android.support.v7.widget.CardView>