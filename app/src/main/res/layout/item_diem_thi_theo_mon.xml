<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="7dp"

    android:layout_marginRight="7dp"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/selecter"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/id_item_diem_thi_lop_stt"
            android:gravity="center"
            android:minWidth="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textSize="10dp"
            android:textColor="@color/md_black_1000"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="35dp"
            android:src="@drawable/ic_class_2"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_height="35dp" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Tên Lớp"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/text_size_15dp"
                    android:textStyle="bold"
                    android:id="@+id/id_item_diem_thi_lop_tenlop"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="L1"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/fm_l1"
                        android:layout_gravity="center"
                        android:textSize="10dp"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:id="@+id/id_item_diem_thi_lop_l1"
                        android:textSize="@dimen/text_size_10dp"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="L2"
                        android:layout_weight="1"
                        android:id="@+id/fm_l2"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="10dp"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:id="@+id/id_item_diem_thi_lop_l2"
                        android:textSize="@dimen/text_size_10dp"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text="TK1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:id="@+id/fm_l3"
                        android:textSize="10dp"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:id="@+id/id_item_diem_thi_lop_tk1"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_10dp"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:id="@+id/fm_l4"
                        android:layout_gravity="center"
                        android:text="TK2"
                        android:textSize="10dp"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:id="@+id/id_item_diem_thi_lop_tk2"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_10dp"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Ngày 2"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="10dp"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:id="@+id/id_item_diem_thi_lop_n1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:singleLine="true"
                        android:textSize="@dimen/text_size_10dp"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Ngày 1"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textSize="10dp"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:id="@+id/id_item_diem_thi_lop_n2"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_10dp"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="ghichu:"
                android:layout_gravity="center"
                android:textSize="@dimen/text_size_10dp"
                android:maxWidth="50dp"
                android:singleLine="true"
                android:textColor="@color/md_black_1000"
                android:layout_height="wrap_content"
                android:id="@+id/id_item_diem_thi_lop_gc" />
            <TextView
                android:layout_width="wrap_content"
                android:text="D chu"
                android:gravity="center"
                android:minWidth="50dp"
                android:id="@+id/id_item_diem_thi_lop_dc"
                android:textSize="20dp"
                android:layout_margin="1dp"
                android:textColor="@color/md_red_500"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>