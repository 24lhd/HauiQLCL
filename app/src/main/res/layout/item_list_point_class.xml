<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/selecter"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/id_item_diem_lop_stt"
                android:gravity="center"
                android:minWidth="20dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/md_black_1000"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="35dp"
                android:src="@drawable/ic_class"
                android:scaleType="fitXY"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:layout_height="35dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Tên Lớp"
                    android:textColor="@color/md_black_1000"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:id="@+id/id_item_diem_lop_tenlop"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Mã lop"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:id="@+id/id_item_diem_lop_masv"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:layout_marginRight="3dp"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/md_black_1000"
                        android:layout_height="wrap_content"
                        android:id="@+id/id_item_diem_lop_dieuKien" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="DTB"
                android:gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/id_item_diem_lop_dtb"
                android:textSize="20dp"
                android:textColor="@color/md_red_500"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content">
            <TextView
                        android:layout_width="wrap_content"
                        android:text="Đ1:"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:gravity="center"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/id_item_diem_lop_d1"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Đ2:"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:gravity="center"
                        android:id="@+id/id_item_diem_lop_d2"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Đ3:"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:id="@+id/id_item_diem_lop_d3"
                        android:gravity="center"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:text="ĐGK:"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:id="@+id/id_item_diem_lop_d4"
                        android:gravity="center"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Nghỉ:"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        astyle="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/md_blue_500"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:id="@+id/id_item_diem_lop_so_tiet_nghi"
                        android:gravity="center"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>