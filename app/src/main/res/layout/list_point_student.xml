<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/selecter"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/id_item_diem_sv_stt"
            android:gravity="center"
            android:minWidth="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textSize="10dp"
            android:textColor="@color/md_black_1000"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="35dp"
            android:src="@drawable/ic_student"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_height="35dp" />
        <View
            android:layout_width="1dp"
            android:background="@color/md_blue_grey_100"
            android:layout_margin="5dp"
            android:layout_height="match_parent"></View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:text="Tên Sinh Viên"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:textColor="@color/md_black_1000"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textStyle="bold"
                    android:id="@+id/id_item_diem_sv_tensv"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:text="Mã sinh viên"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:id="@+id/id_item_diem_sv_masv"
                    android:layout_marginTop="1dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="2dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Đ1"
                            android:gravity="center"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/md_blue_500"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Đ2"
                            android:gravity="center"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/md_blue_500"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Đ3"
                            android:gravity="center"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/md_blue_500"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Đ4"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/md_blue_500"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Nghỉ"
                            android:gravity="center"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/md_blue_500"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="2dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:id="@+id/id_item_diem_sv_d1"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:id="@+id/id_item_diem_sv_d2"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:id="@+id/id_item_diem_sv_d3"
                            android:gravity="center"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="0dp"
                            android:textStyle="bold"
                            android:id="@+id/id_item_diem_sv_d4"
                            android:layout_weight="1"
                            android:gravity="center"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:id="@+id/id_item_diem_sv_so_tiet_nghi"
                            android:gravity="center"
                            style="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/colorAccent"
                            android:layout_height="wrap_content" />


                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="ĐTK:"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@color/md_black_1000"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_item_diem_sv_dieuKien" />
            </LinearLayout>


            </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="DTB"
            android:gravity="center"
            android:minWidth="50dp"
            android:id="@+id/id_item_diem_sv_dtb"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/md_red_500"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_height="match_parent" />
    </LinearLayout>


</android.support.v7.widget.CardView>