<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/selecter"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/id_item_lich_thi_lop_stt"
            android:gravity="center"
            android:textSize="10dp"
            android:minWidth="20dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:textColor="@color/md_black_1000"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="35dp"
            android:src="@drawable/ic_plan_test"
            android:scaleType="fitXY"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center"
            android:layout_height="35dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Ngày thi:"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/fm_l1"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:textColor="@color/md_blue_500"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/id_item_lich_thi_lop_nt"
                    android:textSize="@dimen/text_size_10dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Ca"
                    android:layout_weight="1"
                    android:id="@+id/fm_l2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="10dp"
                    android:textColor="@color/md_blue_500"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:id="@+id/id_item_lich_thi_lop_ca"
                    android:textSize="@dimen/text_size_10dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:text="Lần"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:id="@+id/fm_l3"
                    android:textSize="10dp"
                    android:textColor="@color/md_blue_500"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/id_item_lich_thi_lop_lt"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_10dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/fm_l4"
                    android:layout_gravity="center"
                    android:text="Lớp"
                    android:textSize="10dp"
                    android:textColor="@color/md_blue_500"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/id_item_lich_thi_lop_tenlop"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_10dp"
                    android:textColor="@color/colorAccent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>